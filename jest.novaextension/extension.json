{
  "identifier": "apexskier.jest",
  "name": "Jest",
  "vendor": "Cameron Little",
  "description": "Jest test framework integration",
  "version": "1.0.0",
  "categories": ["issues", "sidebars"],
  "license": "MIT",
  "repository": "https://github.com/apexskier/nova-jest",
  "bugs": "https://github.com/apexskier/nova-jest/issues",

  "main": "main.dist.js",

  "activationEvents": ["*"],

  "entitlements": {
    "process": true
  },

  "config": [
    {
      "key": "apexskier.jest.config.coverage",
      "title": "Collect coverage",
      "description": "Collect coverage while running tests, available from the Jest sidebar.",
      "type": "boolean",
      "default": false
    }
  ],

  "config-workspace": [
    {
      "key": "apexskier.jest.config.execPath",
      "title": "Jest executable",
      "type": "path"
    }
  ],

  "sidebars": [
    {
      "id": "apexskier.jest.sidebar",
      "name": "Jest",
      "smallImage": "SidebarSmall",
      "largeImage": "SidebarLarge",
      "sections": [
        {
          "id": "apexskier.jest.sidebar.info",
          "name": "Information",
          "placeholderText": "Jest Extension Information",
          "headerCommands": [
            {
              "title": "Refresh",
              "image": "__builtin.refresh",
              "command": "apexskier.jest.refreshInformation"
            },
            {
              "title": "Display coverage",
              "image": "__builtin.remote",
              "command": "apexskier.jest.displayCoverage"
            }
          ]
        },
        {
          "id": "apexskier.jest.sidebar.tests",
          "name": "Tests",
          "placeholderText": "Test results will go here"
        }
      ]
    }
  ]
}
