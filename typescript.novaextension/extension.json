{
  "identifier": "apexskier.typescript",
  "name": "Typescript",
  "vendor": "Cameron Little",
  "description": "Advanced typescript language support for Nova",
  "version": "1.1.0",
  "categories": ["languages", "issues", "sidebars"],
  "license": "MIT",
  "repository": "https://github.com/apexskier/nova-typescript",
  "bugs": "https://github.com/apexskier/nova-typescript/issues",

  "main": "main.dist.js",

  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:tsx",
    "onWorkspaceContains:tsconfig.json"
  ],

  "entitlements": {
    "process": true,
    "filesystem": "readonly"
  },

  "config-workspace": [
    {
      "key": "apexskier.typescript.config.tsserverPath",
      "title": "Path to tsserver",
      "description": "Path to your locally installed tsserver executable, generally in node_modules/.bin/tsserver.",
      "type": "path"
    }
  ],

  "sidebars": [
    {
      "id": "apexskier.typescript.sidebars.findSymbol",
      "name": "TS/JS",
      "sections": [
        {
          "id": "apexskier.typescript.sidebars.findSymbol.symbols",
          "name": "Symbols",
          "placeholderText": "Search for a symbol.",
          "headerCommands": [
            {
              "title": "Search",
              "image": "__builtin.refresh",
              "tooltip": "Open the Find Symbol palette",
              "command": "apexskier.typescript.findSymbol"
            }
          ]
        }
      ]
    }
  ],

  "commands": {
    "extensions": [
      {
        "title": "Open Typescript workspace configuration",
        "command": "apexskier.typescript.openWorkspaceConfig"
      },
      {
        "title": "Find Symbol",
        "command": "apexskier.typescript.findSymbol"
      }
    ],
    "editor": [
      {
        "title": "Go to Definition",
        "command": "apexskier.typescript.goToDefinition",
        "when": "editorHasFocus",
        "filters": {
          "syntaxes": ["typescript", "tsx", "javascript", "jsx"]
        }
      },
      {
        "title": "Rename Symbol",
        "command": "apexskier.typescript.rename",
        "when": "editorHasFocus",
        "filters": {
          "syntaxes": ["typescript", "tsx", "javascript", "jsx"]
        }
      },
      {
        "title": "Code Action",
        "command": "apexskier.typescript.codeAction",
        "filters": {
          "syntaxes": ["typescript", "tsx", "javascript", "jsx"]
        }
      }
    ]
  }
}
